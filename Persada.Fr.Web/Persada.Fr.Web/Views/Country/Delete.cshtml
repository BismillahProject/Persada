@model Persada.Fr.ModelView.TOURIS_TV_COUNTRY
@{
    ViewBag.Title = "Delete Country";
}

<h2>@ViewBag.Title.</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Country Code
        </dt>

        <dd>
            @Html.DisplayFor(model => model.COUNTRY_CODE)
        </dd>

        <dt>
            Country Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.COUNTRY_NAME)
        </dd>

        <dt>
            Country Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.COUNTRY_DESCRIPTION)
        </dd>

    </dl>

    @using (Html.BeginForm("ActionDelete", "Country", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
